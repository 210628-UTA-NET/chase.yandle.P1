@model IEnumerable<WebUI.Models.LineItemVM>
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>We are in the Order Detail Page</h1>
    @*<a hidden>@(OrderVM.orderHistory.oPrice=0)</a>*@
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer That Ordered</th>
                <th>Total Price</th>
                <th>Date and Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@OrderVM.orderHistory.oCustName</td>
                <td>$@OrderVM.orderHistory.oPrice</td>
                <td>@OrderVM.orderHistory.oDateAndTime</td>
            </tr>
        </tbody>
    </table>
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price of Line</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.liProdName)</td>
                    <td>@Html.DisplayFor(modelItem => item.liQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.liLinePrice)@*<a hidden>@(OrderVM.orderHistory.oPrice = OrderVM.orderHistory.oPrice + item.liLinePrice)</a>*@</td>
                </tr>
            }
            <tr>
                <td>
                </td>
                <td>
                    <a>Total:</a>
                </td>
                <td>
                    <a>$@OrderVM.orderHistory.oPrice</a>
                </td>
            </tr>
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-danger" style="position:relative; top:15px; width:100px">Back</a>
</body>
</html>