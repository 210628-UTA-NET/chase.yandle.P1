@model IEnumerable<WebUI.Models.LineItemVM>
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>We are in Customer Page</h1>
    <br />

    <a class="btn btn-secondary" style="position:relative; bottom:15px" asp-action="Create">Create Customer</a>
    @using (Html.BeginForm("Login", "Customer", FormMethod.Get))
    {
        @Html.TextBox("p_name") <input type="submit" value="Filter By Name" placeholder="Name" />
    }
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price of Line</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.liProdName)</td>
                    <td>@Html.DisplayFor(modelItem => item.liQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.liLinePrice)</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>